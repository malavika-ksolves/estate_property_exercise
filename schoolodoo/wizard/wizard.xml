<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
       <record id="school_wizard_form" model="ir.ui.view">
            <field name="name">Exam Form</field>
            <field name="model">schoolodoo.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="select"/>
                            </h1>
                        </div>
                    </sheet>
                    <footer>
                        <button name="open_sheet" type="object" string="Open" />
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_wizard">
            <field name="name">Exam Details</field>
            <field name="res_model">schoolodoo.wizard</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>

