
<odoo>
    <record id="maths_exam_form" model="ir.ui.view">
            <field name="name">Maths exam form</field>
            <field name="model">schoolodoo.maths</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="question1" />
                            <field name="question2" />
                        </group>
                        <group>
                            <field name="question3" />
                            <field name="question4" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_question">
            <field name="name">Maths Exam Form</field>
            <field name="res_model">schoolodoo.maths</field>
            <field name="view_mode">form</field>
        </record>
</odoo>